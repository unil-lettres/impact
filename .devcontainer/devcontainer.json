// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-docker-compose
{
    "name": "Impact Docker Dev Container",
    "dockerComposeFile": [
        "../docker-compose.yml",
        "../docker-compose.override.yml.dev"
    ],
    "service": "impact-app",
    "workspaceFolder": "/var/www/impact",
    "features": {
        "ghcr.io/devcontainers/features/git:1": {
            "version": "2.39.2"
        },
        "ghcr.io/guiyomh/features/vim": {}
    },
    "forwardPorts": [8787, 9898, 8025],
    "portsAttributes" : {
        "8787": {
            "label": "Impact Application",
            "visibility": "private"
        },
        "9898": {
            "label": "Impact PHPMyAdmin",
            "visibility": "private"
        },
        "8025": {
            "label": "Impact Mailhog",
            "visibility": "private"
        }
    },
    "initializeCommand": "cp docker/example.env docker/.env",
    "postCreateCommand": "if [ -n \"$CODESPACE_NAME\" ]; then APP_URL=\"https://$CODESPACE_NAME-8787.app.github.dev\"; if grep -q '^APP_URL=' .env; then sed -i \"s|^APP_URL=.*|APP_URL=$APP_URL|\" .env; else echo \"APP_URL=$APP_URL\" >> .env; fi; fi",
    "customizations": {
        "vscode": {
            "extensions": [
                "bmewburn.vscode-intelephense-client",
                "dbaeumer.vscode-eslint",
                "eamodio.gitlens",
                "EditorConfig.EditorConfig",
                "MehediDracula.php-namespace-resolver",
                "mikestead.dotenv",
                "PKief.material-icon-theme",
                "redhat.vscode-yaml",
                "ryu1kn.partial-diff",
                "zobo.php-intellisense",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "laravel.vscode-laravel",
            ]
        }
    }
}
